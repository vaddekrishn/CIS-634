<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginBottom="?actionBarSize"
android:orientation="vertical"
tools:context=".Admin.AdminProfileFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rectangle_2"
            tools:ignore="DuplicateIds">


            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_backarrow"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/aboutUs"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/EditProfile"
                android:layout_width="20.34dp"
                android:layout_height="20.34dp"
                android:layout_gravity="end"
                android:layout_marginRight="40dp"
                android:src="@drawable/editprofile" />

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_below="@id/toolbar"
            android:id="@+id/frame_528"
            android:layout_width="335dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/frame_528">

            <TextView
                android:id="@+id/first_name"
                android:layout_width="303dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/satoshi"
                android:gravity="top"
                android:text="Name"
                android:textAppearance="@style/first_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="303dp"
                android:layout_height="22dp"
                android:layout_below="@id/first_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:text="Rahul"
                android:textAppearance="@style/first_name"
                android:textSize="16sp"

                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mobNum"
            android:layout_width="335dp"
            android:layout_height="80dp"
            android:layout_below="@id/frame_528"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/frame_528">

            <TextView
                android:id="@+id/mobileNo"
                android:layout_width="303dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/satoshi"
                android:gravity="top"
                android:text="Mobile Number"
                android:textAppearance="@style/first_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mobNo"
                android:layout_width="303dp"
                android:layout_height="22dp"
                android:layout_below="@id/mobileNo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:text="+91 9191919191"
                android:textAppearance="@style/first_name"
                android:textSize="16sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email"
            android:layout_width="335dp"
            android:layout_height="80dp"
            android:layout_below="@id/mobNum"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/frame_528">

            <TextView
                android:id="@+id/EmailAdd"
                android:layout_width="303dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/satoshi"
                android:gravity="top"
                android:text="Email Address"
                android:textAppearance="@style/first_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emailAddress"
                android:layout_width="303dp"
                android:layout_height="22dp"
                android:layout_below="@id/EmailAdd"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:text="rahulagarwal@email.com"
                android:textAppearance="@style/first_name"
                android:textSize="16sp"

                />
        </RelativeLayout>





    </RelativeLayout>

</ScrollView>
</LinearLayout>