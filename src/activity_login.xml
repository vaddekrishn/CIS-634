<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitelight"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/img3"
        android:layout_width="match_parent"
        android:layout_height="128.73dp"
        android:background="@drawable/rectangle5"/>

    <ImageView
        android:id="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="120.73dp"
        android:layout_below="@id/img3"
        android:layout_marginTop="-110dp"
        android:background="@drawable/rectangle6" />

    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/img4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_backarrow"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/img6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Sign In"
        android:textColor="@color/purple_900"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@id/backArrow"
        android:layout_centerInParent="true"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/signIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img6"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                app:endIconDrawable="@drawable/vector2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email or Phone number"
                    android:inputType="text"
                   />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/userPass"
                android:layout_marginTop="15dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/signUpbtn"
        android:layout_marginTop="15dp"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/signIN">

        <ImageButton
            android:id="@+id/userSignIn"
            android:layout_width="289dp"
            android:layout_height="62dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rectangle_9"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/signup"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="315dp"
        android:layout_height="25dp"
        android:layout_below="@id/signUpbtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/signup"
        android:text="Forgot your password"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/userSignUp"
        android:layout_below="@id/forgetPass"
        android:layout_width="200dp"
        android:layout_height="25dp"
       android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account ?"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Sign-Up"
            android:id="@+id/openReg"
            android:textColor="@color/red"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img7"
        android:layout_width="match_parent"
        android:layout_height="110.73dp"
        android:layout_below="@id/userSignUp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rect_6" />

    <ImageView
        android:id="@+id/img8"
        android:layout_below="@id/img7"
        android:layout_width="match_parent"
        android:layout_height="100.73dp"
        android:layout_marginTop="-110dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_5" />
</RelativeLayout>